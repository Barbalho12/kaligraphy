<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.barreto.kaligraphy.activities.ExercicioResult"
    android:gravity="center">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30px"
            android:background="@drawable/border">

            <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textAlignment="center"-->
                <!--android:textSize="22dp"-->
                <!--android:text="Exercício Finalizado"-->
                <!--android:id="@+id/tv_final"-->
                <!--android:layout_margin="20dp"/>-->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="30dp"
                android:text="TUTORIAL"
                android:padding="20px"
                android:id="@+id/tv_name_exercicio"
                android:layout_margin="20dp"
                android:background="@drawable/border"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/check"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="35dp"
                android:text="+12pts"
                android:id="@+id/tv_pontos"
                android:layout_margin="20dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="#767575"
                android:textSize="20dp"
                android:text="Máximo: 10pts"
                android:id="@+id/tv_pontos_max"/>


        </LinearLayout>

    <Button
        android:id="@+id/bt_continuar_final"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20px"
        android:layout_marginTop="20px"
        android:text="CONTINUAR"/>

</LinearLayout>
